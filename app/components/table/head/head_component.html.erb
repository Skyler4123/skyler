<thead
	class="text-xs text-gray-700 bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
  data-table--table-component-target='header'
>
	<tr>
		<% @headers.each do |attribute, name| %>
			<th scope="col" class="px-6 py-3">
				<%= name %>
			</th>
		<% end %>
		<% if @edit %>
			<th scope="col" class="px-6 py-3">
				Edit
			</th>
		<% end %>
	</tr>
</thead>